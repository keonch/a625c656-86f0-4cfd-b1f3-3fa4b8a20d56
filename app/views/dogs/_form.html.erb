<%= simple_form_for @dog do |f| %>
  <%= f.input :name %>
  <%= f.input :description, as: :text %>
  <%= f.file_field :images, multiple: true %>
  <br>
  <% if @dog.images.any? %>
    <% @dog.images.each do |image| %>
      <%= image_tag image %>
    <% end %>
  <% end %>

  <%= f.button :submit %>
<% end %>
