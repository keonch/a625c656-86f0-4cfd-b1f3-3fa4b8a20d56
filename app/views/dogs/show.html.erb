<div class="dog-show">
  <h2><%= @dog.name %></h2>
  <% if !@dog.images.empty? && @dog.images.size > 1 %>
    <%= render partial: 'carousel', locals: {dog: @dog} %>
  <% else %>
    <% @dog.images.each do |image| %>
      <%= image_tag url_for(image), alt: "Photo of #{@dog.name}", class:"d-block" %>
    <% end %>
  <% end %>
  <p><%= @dog.description %></p>
  <%= link_to "Edit #{@dog.name}'s Profile", edit_dog_path %>
  <%= link_to "Delete #{@dog.name}'s Profile", dog_path, method: :delete, data: { confirm: 'Are you sure?' } %>
  <%= button_to "Like #{@dog.name}", like_dog_path %>
</div>
