<div class="carousel-container">
  <div id="dogCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
    <div class="carousel-inner">
      <% dog.images.each_with_index do |image, i| %>
        <div class="carousel-item <%= i == 0 ? "active" : "" %>">
          <%= image_tag url_for(image), alt: "Photo of #{dog.name}", class:"d-block" %>
        </div>
      <% end %>
    </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#dogCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#dogCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</div>